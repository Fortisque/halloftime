<!DOCTYPE html>
<html>
<head>
  <title>HallOfTime</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
  <span id="userbar" class="userbar">Welcome, <%= current_user.email %></span>
  <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
<% else %>
  <span class="userbar"><%= link_to "Log In", new_user_session_path %> | <%= link_to "Register", new_user_registration_path %></span>
<% end %>

| <%= link_to 'Projects', projects_path %>
| <%= link_to 'Users', 'user/index' %>
| <%= link_to 'Tasks', tasks_path %>

<%= yield %>

</body>
</html>
