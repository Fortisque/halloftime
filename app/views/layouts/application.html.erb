<!DOCTYPE html>
<html>
<head>
  <title>HallOfTime</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <center>
<% if user_signed_in? %>
    
        
  <span id="userbar" class="userbar">Welcome, <%= current_user.email %></span>
  <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
  
  | <%= image_tag "ic_action_event_m.png" %><%= link_to 'Dashboard', '/pages/dashboard' %>
  | <%= image_tag "ic_action_paste_m.png" %><%= link_to 'Projects', projects_path %>
  | <%= image_tag "ic_action_group_m.png" %><%= link_to 'Users', '/user/index' %>
  | <%= image_tag "ic_action_paste_m.png" %><%= link_to 'Tasks', tasks_path %>
  | <%= image_tag "ic_action_about.png" %><%= link_to 'About', '/pages/about' %>
  
  
<% else %>

    <h1>Hall of Time</h1>
    <h2>Timesheet management made simple.</h2>
    <span class="userbar"><%= link_to "Log In", new_user_session_path %> | <%= link_to "Register", new_user_registration_path %></span>
  

<% end %>





<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? "success" : "danger" %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>




<%= yield %>





<br>
<br>
<div class="footer">
    <%= image_tag "ic_action_about.png" %><%= link_to 'About', '/pages/about' %>
    <p>&copy; 2014 Hall of Time</p> 
</div>


</center>
</body>
</html>
